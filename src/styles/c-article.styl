/* The article component */
.c-article {
  +above(xl) {
    center(60%);
  }

  h1 {
    font-size: 4rem;
    margin-bottom: .5rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: $vmargin;
  }


  p {
    font-size: $baseFont * 1.2;
    margin-bottom: 1rem

    &:first-of-type {
      font-weight: bold
    }
  }

  ul {
    margin: 2rem;
    li {
      list-style: disc;
      margin-bottom: .5rem;
    }
  }

  img {
    max-width: 100%;
    height: auto;
    margin: 1rem;
  }

  .wp-caption {
    max-width: 100%;
    background-color: lighten($primary-con, 90%);
    margin: 2rem auto;
    padding: 1rem;
    text-align: center
    img {
      max-width: 90%;
      margin: auto !important; //needed to override inline styles
    }
  }

  .wp-caption-text {
    font-size: 1.4rem;
    margin-top: 1rem;
  }

  iframe {
    margin: 2rem auto;
    center(100%)
    width: 500px;
    height: 350px;
  }

  &__post-meta {
    display: block
    font-size: 1.6rem
    margin-bottom: 2rem
  }

}